{
    "env": {
        "browser": true,
        "es6": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "react-hooks"
    ],
    "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".d.ts"]
      }
    }
  },
  "rules": {
    "linebreak-style": 0,
    "max-len": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-props-no-spreading": 0,
    "consistent-return": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "arrow-body-style": 0,
    "no-case-declarations": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "react/forbid-prop-types": 0,
    "import/extensions": 0,
    "prefer-default-export": 0,
    "import/prefer-default-export": 0,
    "indent": 0,
    "react/jsx-indent": 0
  }
}
