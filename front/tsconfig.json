{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ES5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./types"],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "Paypal.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx" ]
}
